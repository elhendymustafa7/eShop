@using WebApplication4.Models.ViewModel
@model IEnumerable<UserIndexVM>
@{
    ViewData["Title"] = "UserIndex";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

  <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="banner">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="caption">
              <h2>Ecommerce HTML Template</h2>
              <div class="line-dec"></div>
              <p>Pixie HTML Template can be converted into your desired CMS theme. Total <strong>5 pages</strong> included. You can use this Bootstrap v4.1.3 layout for any CMS. 
              <br><br>Please tell your friends about <a rel="nofollow" href="https://www.facebook.com/tooplate/">Tooplate</a> free template site. Thank you. Photo credit goes to <a rel="nofollow" href="https://www.pexels.com">Pexels website</a>.</p>
              <div class="main-button">
                <a asp-controller="Products" asp-action="Products">Order Now!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Banner Ends Here -->

    <!-- Featured Starts Here -->
    <div class="featured-items">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <div class="line-dec"></div>
              <h1>Featured Items</h1>
            </div>
          </div>
          <div class="col-md-12">
            <div class="owl-carousel owl-theme">
                    @foreach (var item in Model)
                    {
                        int i = 0;
                            <a  asp-controller="Products" asp-action="single_product" asp-route-id="@item.Id">
                            <div class="featured-item">
                                <img src="@($"data:image/*;base64,{Convert.ToBase64String(item.Image)}" )" height="250" width="200" alt="Item @i">
                                <h4>@item.Name</h4>
                                <h6>$@item.Price</h6>
                            </div>
                        </a>
                        i++;
                    }
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Featred Ends Here -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }